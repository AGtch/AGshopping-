<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ProductDetails">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/productColorSlider"
            android:layout_width="243dp"
            android:layout_height="202dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/colorGroup"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:background="@drawable/shape_leaf"
            android:gravity="center"
            android:minHeight="201dp"
            app:layout_constraintBottom_toBottomOf="@+id/productColorSlider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toEndOf="@id/productColorSlider"
            app:layout_constraintTop_toTopOf="@+id/productColorSlider"
            app:layout_constraintVertical_bias="1.0">

            <RadioButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:buttonTint="#2F4B81"
                android:checked="true"
                android:clickable="true" />

            <RadioButton
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:buttonTint="#BC4747"
                android:checked="true"
                android:clickable="true" />

            <RadioButton
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:buttonTint="#FEC286"
                android:checked="true"
                android:clickable="true" />

            <RadioButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:buttonTint="#47BC66"
                android:checked="true"
                android:clickable="true" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/product_attribute_layout"
            android:layout_width="245dp"
            android:layout_height="170dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/shape_leaf"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/productColorSlider"
            app:layout_constraintTop_toBottomOf="@id/productColorSlider">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:text="Nashville armchair"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatRatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:numStars="5"
                android:rating="3.5"
                android:theme="@style/RatingBar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Â£349"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="170dp"
            android:background="@drawable/shape_leaf"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/product_attribute_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_attribute_layout"
            app:layout_constraintTop_toTopOf="@+id/product_attribute_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:src="@drawable/minus_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/add_icon" />


        </LinearLayout>

        <TextView
            android:id="@+id/product_details_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:text="A contemporary twist on classic mid-century modern design."
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_attribute_layout" />

        <Button
            style="@style/CustomCardCorners"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/black"
            android:text="add to car"
            app:icon="@drawable/shopping_car_icon"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_details_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>