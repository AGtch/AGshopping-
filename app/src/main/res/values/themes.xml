<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AGShopping" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="ThemeOverlay.Material3.Button">

        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">66dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">66dp</item>
        <item name="android:bottomLeftRadius">66dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">66dp</item>
    </style>


    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlActivated">@color/goldenColor</item>
    </style>
</resources>